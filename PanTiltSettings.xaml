<Window x:Class="ManateeConsole.PanTiltSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManateeConsole"
        mc:Ignorable="d"
        Title="PanTiltSettings" Height="1000" Width="1000" VerticalAlignment="Top" Loaded="WindowLoaded">
    <Grid>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <DockPanel Name="ptdock1" Grid.Row="0" Grid.Column="1" LastChildFill="False">
                <WindowsFormsHost x:Name="ptHost1" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="5"/>
            </DockPanel>
            <DockPanel Name="ptdock2" Grid.Row="1" Grid.Column="1" LastChildFill="False">
                <WindowsFormsHost x:Name="ptHost2" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="5"/>
            </DockPanel>
            <!--<DockPanel Name="ptdock3" Grid.Row="2" Grid.Column="1">
                <WindowsFormsHost x:Name="ptHost3" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5"/>
            </DockPanel>-->
            <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="5" Grid.RowSpan="1">
                <Grid Margin="9">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="15*"/>
                    </Grid.RowDefinitions>
                    <Label x:Name="labelPanTilt1" Content="Pan/Tilt1" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="72" FontWeight="Bold"/>
