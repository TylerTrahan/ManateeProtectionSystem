                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Label x:Name="labelSerialPort1" Content="Serial Port" Grid.Row="0" VerticalAlignment="Top"/>
                            <ComboBox x:Name="comboBox1SerialPort1" Height="28" Grid.Row="0" SelectedIndex="0" VerticalAlignment="Center" Text="{Binding serialPort_pt1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            </ComboBox>
                            <Button x:Name="btn1Connect" Height="28" Width="250" Content="Connect" Grid.Row="1" Click="btn1Connect_Click"/>
                            <CheckBox x:Name="checkBoxAutoConnect1" Content="Connected to Pan/Tilt" Grid.Row="2" Height="15" Margin="5,5" VerticalAlignment="Center" IsChecked="True"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="textblockHomePosition1" Text="Home Position" Grid.ColumnSpan="4" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="textblockPanPosition1" Text="Pan Position" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center"/>
                            <TextBox x:Name="textBoxPanPosition1" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" TextWrapping="Wrap" Text="{Binding panHome_pt1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5,15"/>
                            <TextBlock x:Name="textblocklTiltPosition1" Text="Tilt Position" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Center"/>
                            <TextBox x:Name="textBoxTiltPosition1" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" TextWrapping="Wrap" Text="{Binding tiltHome_pt1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5,15"/>
                            <CheckBox x:Name="checkBoxOffset1" Content="Offset" Grid.Row="3" Grid.ColumnSpan="4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>           
            <Border Grid.Row="1" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="5" Grid.RowSpan="1">
                <Grid Margin="9">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="15*"/>
                    </Grid.RowDefinitions>
                    <Label x:Name="labelPanTilt2" Content="Pan/Tilt2" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="72" FontWeight="Bold"/>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Label x:Name="labelSerialPort2" Content="Serial Port" Grid.Row="0" VerticalAlignment="Top"/>
                            <ComboBox x:Name="comboBox1SerialPort2" Height="28" Grid.Row="0" SelectedIndex="0" VerticalAlignment="Center" Text="{Binding serialPort_pt2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            </ComboBox>
                            <Button x:Name="btn2Connect" Height="28" Width="250" Content="Connect" Grid.Row="1" Click="btn2Connect_Click"/>
                            <CheckBox x:Name="checkBoxAutoConnect2" Content="Connected to Pan/Tilt" Grid.Row="2" Height="15" Margin="5,5" VerticalAlignment="Center" IsChecked="False"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="textblockHomePosition2" Text="Home Position" Grid.ColumnSpan="4" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock x:Name="textblockPanPosition2" Text="Pan Position" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center"/>
                            <TextBox x:Name="textBoxPanPosition2" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" TextWrapping="Wrap" Text="{Binding panHome_pt2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5,15"/>
                            <TextBlock x:Name="textblocklTiltPosition2" Text="Tilt Position" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Center"/>
                            <TextBox x:Name="textBoxTiltPosition2" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" TextWrapping="Wrap" Text="{Binding tiltHome_pt2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5,15"/>
                            <CheckBox x:Name="checkBoxOffset2" Content="Offset" Grid.Row="3" Grid.ColumnSpan="4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
