                            <TextBox x:Name="textBoxTiltPosition3" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" TextWrapping="Wrap" Text="{Binding tiltHome_pt3, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5,15"/>
                            <CheckBox x:Name="checkBoxOffset3" Content="Offset" Grid.Row="3" Grid.ColumnSpan="4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
            <Border Grid.Row="3" BorderBrush="Black" BorderThickness="1" Margin="5" Visibility="Hidden">
