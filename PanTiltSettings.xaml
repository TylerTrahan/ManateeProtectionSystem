            <Grid Margin="10" Grid.Row="3" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="buttonOK" Content="OK" Grid.Column="1" Margin="10,0" Click="OnClickOK"/>
                <Button x:Name="buttonCancel" Content="Cancel" Grid.Column="2" Margin="10,0" Click="OnClickCancel"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
